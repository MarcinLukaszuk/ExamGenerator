@model ExamGeneratorModel.ViewModel.ExamViewModel
@{
    int tmpQuestionID = ViewBag.tmpQuestionID ?? 0;
    int tmpAnswerID = ViewBag.tmpAnswerID ?? 0;
}


<div  class="form-group">
    @Html.LabelFor(model => model.Questions[tmpQuestionID].Answers[tmpAnswerID].TextAnswer, htmlAttributes: new { @class = "control-label col-md-2" })
   <div class="col-md-7">
        @Html.EditorFor(model => model.Questions[tmpQuestionID].Answers[tmpAnswerID].TextAnswer, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Questions[tmpQuestionID].Answers[tmpAnswerID].TextAnswer, "", new { @class = "text-danger" })
    </div>
   <div class="col-md-3">
       <button type="button" class="btn btn-danger" onclick="removeAnswer(this)">
           Remove Answer
       </button>
       @Html.EditorFor(model => model.Questions[tmpQuestionID].Answers[tmpAnswerID].Remove, new { htmlAttributes = new { @class = "form-control hidden" } })

   </div>
</div>

